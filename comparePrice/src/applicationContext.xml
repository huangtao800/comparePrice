		</property>
	</bean>
	
	<bean id="candidateWordAction" class="edu.nju.comparePrice.actions.CandidateWordAction">
		<property name="specialWordService">
			<ref bean="specialWordService" />
		</property>
		<property name="brandService">
			<ref bean="brandService" />
